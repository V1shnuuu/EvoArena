{
  "name": "evoarena-protocol",
  "version": "0.1.0",
  "description": "Adaptive AI-Driven Liquidity Infrastructure for BNB Chain",
  "license": "MIT",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy:local": "hardhat run scripts/deploy.ts",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network bscTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network bscMainnet",
    "verify": "hardhat run scripts/verify.ts --network bscTestnet",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "clean": "hardhat clean"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "hardhat": "^2.22.0",
    "dotenv": "^16.4.0",
    "solhint": "^4.5.0"
  }
}
